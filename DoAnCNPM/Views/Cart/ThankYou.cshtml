@{
    ViewBag.Title = "Thank You";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="text-align: center; margin: 40px auto; width: 60%;">
    <div style="padding: 20px; border-radius: 8px; background-color: #f8f9fa; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h2 style="color: #28a745; margin-bottom: 20px;">@ViewBag.Message</h2>
        <p style="font-size: 18px; color: #495057; margin-bottom: 20px;">Cảm ơn bạn đã mua hàng từ chúng tôi. Đơn hàng của bạn sẽ được xử lý sớm nhất có thể.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Trở về trang chủ</a>
    </div>
</div>

<style>
    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-size: 16px;
        color: white;
        background-color: #007bff;
        transition: background-color 0.3s ease;
        display: inline-block; /* Đảm bảo nút không bị đè lên chữ */
        margin-top: 20px; /* Khoảng cách từ văn bản phía trên */
    }

    .btn-primary {
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
