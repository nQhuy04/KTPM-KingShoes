@model DoAnCNPM.Models.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link rel="stylesheet" href="~/assets/css/login_registration.css">

@using (Html.BeginForm("AuthenLogin", "LoginRegistration", FormMethod.Post)) //Truyền vào hàm xử lý Login
{
    <div class="header_external">
        <a href="@Url.Action("Index", "Home")">
            <img class="logo_header" src="/assets/img/logo_header.png" alt="">
        </a>
        <img src="/assets/img/phone-solid.svg" class="icon_phone"></img>
        <span class="hotline_text">Hotline: </span>
        <span class="contact_number">0909300746</span>
    </div>

    <div class="background_external">
        <div class="overview_background_external">
            <img src="/assets/img/logo.png" class="logo_external" alt="">
            <div class="KingShoes_text">KingShoes.vn</div>
            <div class="slogan">“Vương Quốc Giày - Chất Lượng Đẳng Cấp”</div>
        </div>

        <div class="Login_Form" id="login_form">
            <div style="color: #222; font-size: 1.25rem; max-width: 8.5rem; margin: 20px;">Đăng nhập</div>
            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "user_name_input", @placeholder = "Nhập tên đăng nhập" } })
            @Html.ValidationMessageFor(m => m.Username)
            @if (ViewBag.Errorname != null)
            {
                <h5>@ViewBag.ErrorUsername</h5>
            }

            @Html.EditorFor(m => m.Userpassword, new { htmlAttributes = new { @class = "password_input", @placeholder = "Nhập mật khẩu" } })
            @Html.ValidationMessageFor(m => m.Userpassword)
            @if (ViewBag.Errorpassword != null)
            {
                <h5>@ViewBag.ErrorUserpassword</h5>
            }

            <input type="submit" value="Đăng Nhập" class="Login_button" />

            <div class="go_to_register">
                <h4 class="no_account">Bạn chưa có tài khoản ?</h4>
                <a class="go_to_register_button" href="@Url.Action("Register", "LoginRegistration")">Đăng ký</a>
            </div>
        </div>
    </div>
}




