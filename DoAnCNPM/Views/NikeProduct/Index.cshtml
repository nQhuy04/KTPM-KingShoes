@model IEnumerable<DoAnCNPM.Models.Product>
@{
    ViewBag.Title = "NikeProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">


<!--Search Bar-->
<div id="div-search-bar">
    <div class="div-box">
        <label for="size">Kích cỡ: </label>
        <br />
        <select class="search-section" id="size">
            <option value="37">37</option>
            <option value="38">38</option>
            <option value="40">40</option>
            <option value="42">42</option>
        </select>
    </div>
    <div class="div-box">
        <label for="price">Khoảng giá: </label>
        <br />
        <select class="search-section" id="price">
            <option value="pr1">Dưới 3 triệu</option>
            <option value="pr2">Từ 3 đến 5 triệu</option>
            <option value="pr3">Từ 5 đến 10 triệu</option>
            <option value="pr4">Trên 10 triệu</option>
        </select>
    </div>
    <div class="div-box">
        <label for="sort">Sắp xếp: </label>
        <br />
        <select class="search-section" id="sort">
            <option value="price">Theo giá</option>
            <option value="alpA"> Từ A đén Z</option>
            <option value="aplD">Từ Z đến A</option>
        </select>
    </div>
    <button style="background-color: gold; width: 20%; height: 30px; border: thin; border-radius: 3px; margin-left: 3%; margin-top: 37px; font-size: 20px; font-family: 'Times New Roman' ">
        TÌM NGAY
    </button>
</div>

<!--Main-->
<div id="div-main">
    <div id="div-left">
        <div id="div-pro-list" class="container">
            <div class="row">

                <!-- Thẻ sản phẩm -->
                @foreach (var pro in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="product_card">
                            <div class="product_lable">
                                <span class="product_lable_text">New</span>
                            </div>

                            <div class="product_img_cover">
                                <a href="@Url.Action("Details", "NikeProduct", new { id = pro.ProductID })">
                                    <img class="pro-img" src="@Url.Content(pro.ImageProduct)" />
                                </a>
                            </div>

                            <div class="shoes_content">
                                <a class="product_name_ancor" href="@Url.Action("Details", "NikeProduct", new { id = pro.ProductID })">
                                    <div class="product_name_cover">
                                        <div class="product_name">@Html.DisplayFor(model => pro.ProductName)</div>
                                    </div>
                                </a>

                                <div class="rating_div">
                                    <i><img class="img_rating" src="assets/img/star-solid.svg" alt=""></i>
                                    <i><img class="img_rating" src="assets/img/star-solid.svg" alt=""></i>
                                    <i><img class="img_rating" src="assets/img/star-solid.svg" alt=""></i>
                                    <i><img class="img_rating" src="assets/img/star-solid.svg" alt=""></i>
                                    <i><img class="img_rating" src="assets/img/star-solid.svg" alt=""></i>
                                </div>

                                <div class="product_price">@Html.DisplayFor(model => pro.Price)</div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>


    <div id="div-right">
        <img style="width: 100%; margin-top: 15%" src="~/assets/img/Banner.jpg" />
        <h2><b>TIN TỨC MỚI</b></h2>
        <ul style="list-style: none">
            <li>
                <a><b>Mô tả ... </b></a> <br />
                <label style="margin-left: 20px">   00/00/2024  - 00:00 </label>
            </li>
            <li>
                <a><b>Mô tả ... </b></a> <br />
                <label style="margin-left: 20px">   00/00/2024  - 00:00 </label>
            </li>
            <li>
                <a>
                    <b>Mô tả ... </b><br />
                    <label style="margin-left: 20px">   00/00/2024  - 00:00 </label>
            </li>
        </ul>
        <hr>
        <h2><b>SẢN PHẨM MỚI</b></h2>
        <ul style="list-style: none; margin: 10px">
            <li>
                <table>
                    <tr>
                        <td style="width: 30%">
                            <img style="width: 100%" src="~/assets/img/pro4.jpg" />
                        </td>
                        <td>
                            <p><b>Mô tả sản phẩm ... </b></p>
                            <p>40.000.000</p>
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 30%">
                            <img style="width: 100%" src="~/assets/img/pro1.jpg" />
                        </td>
                        <td>
                            <p><b>Mô tả sản phẩm ... </b></p>
                            <p>10.000.000</p>
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 30%">
                            <img style="width: 100%" src="~/assets/img/pro3.jpg" />
                        </td>
                        <td>
                            <p><b>Mô tả sản phẩm ... </b></p>
                            <p>30.000.000</p>
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 30%">
                            <img style="width: 100%" src="~/assets/img/pro2.jpg" />
                        </td>
                        <td>
                            <p><b>Mô tả sản phẩm ... </b></p>
                            <p>20.000.000</p>
                        </td>
                    </tr>
                </table>
            </li>
        </ul>
    </div>
</div>

